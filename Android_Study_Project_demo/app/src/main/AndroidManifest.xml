            android:windowSoftInputMode="adjustUnspecified|adjustResize">

        </activity>

        <activity
            android:name=".activity.LottieDemoActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustUnspecified|adjustResize">

        </activity>


        <activity
            android:name=".activity.XPopupDemoActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustUnspecified|adjustResize">

        </activity>

        <activity
            android:name=".activity.XBannerDemoActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustUnspecified|adjustResize">

        </activity>
    </application>


</manifest>